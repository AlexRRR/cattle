<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                      http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
                      http://www.springframework.org/schema/context
                      http://www.springframework.org/schema/context/spring-context-3.0.xsd"
                      >

    <bean class="io.github.ibuildthecloud.gdapi.factory.impl.SchemaFactoryImpl">
        <property name="postProcessors" value="#{extensionManager.list('schema.post.processor')}" />
    </bean>

    <bean class="io.github.ibuildthecloud.dstack.schema.processor.JsonFileOverlayPostProcessor" >
        <property name="path" value="schema/base" />
        <property name="overridePath" value="schema/base-override" />
        <property name="schemaMashaller">
            <bean class="io.github.ibuildthecloud.gdapi.json.JacksonMapper" />
        </property>
    </bean>

<!--     <bean id="BaseSchemaJson" class="io.github.ibuildthecloud.dstack.schema.processor.JsonOverlayPostProcessor" > -->
<!--         <property name="schemaFile" value="classpath:schema/base-schema.json" /> -->
<!--         <property name="jsonMapper"> -->
<!--             <bean class="io.github.ibuildthecloud.gdapi.json.JacksonMapper" /> -->
<!--         </property> -->
<!--     </bean> -->

    <bean class="io.github.ibuildthecloud.dstack.schema.processor.JpaWritablePostProcessor" />

    <bean class="io.github.ibuildthecloud.dstack.schema.processor.StripSuffixPostProcessor" >
        <property name="suffix" value="Record" />
    </bean>


</beans>
