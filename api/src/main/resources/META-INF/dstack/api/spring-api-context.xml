<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                      http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
                      http://www.springframework.org/schema/context
                      http://www.springframework.org/schema/context/spring-context-3.0.xsd"
                      >

    <bean class="io.github.ibuildthecloud.gdapi.servlet.ApiRequestFilterDelegate" >
        <property name="handlers">
            <list>
                <bean class="io.github.ibuildthecloud.gdapi.request.handler.BodyParserRequestHandler" />
                <bean class="io.github.ibuildthecloud.gdapi.request.handler.SchemasHandler" />
                <bean class="io.github.ibuildthecloud.gdapi.request.handler.ResourceManagerRequestHandler" >
                    <property name="defaultResourceManager" ref="DefaultResourceManager" />
                </bean>
                <bean class="io.github.ibuildthecloud.gdapi.response.JsonResponseWriter" />
                <bean class="io.github.ibuildthecloud.gdapi.response.HtmlResponseWriter" />
            </list>
        </property>
    </bean>

    <bean id="DefaultResourceManager" class="io.github.ibuildthecloud.dstack.api.resource.DefaultJooqResourceManager" />

    <bean class="io.github.ibuildthecloud.gdapi.response.impl.DefaultHtmlTemplate" >
        <property name="cssUrl" value="http://img1.wsimg.com/ucp/api/1.2.11/ui.css" />
        <property name="jsUrl" value="http://img1.wsimg.com/ucp/api/1.2.11/ui.js" />
    </bean>
    <bean class="io.github.ibuildthecloud.gdapi.request.parser.DefaultApiRequestParser" />
    <bean class="io.github.ibuildthecloud.gdapi.auth.NoOpApiAuthenticator" />
    <bean class="io.github.ibuildthecloud.gdapi.json.JacksonMapper" />
    <bean class="io.github.ibuildthecloud.gdapi.factory.impl.SchemaFactoryImpl">
        <property name="types">
            <list>
                <value>org.apache.cloudstack.db.jooq.generated.tables.records.VmInstanceRecord</value>
            </list>
        </property>
    </bean>

</beans>
